# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
# Use DIRECT_URL for direct PostgreSQL connection (bypasses pgbouncer prepared statement cache)
# For Supabase: Use the connection pooling URL for DATABASE_URL and direct connection URL for DIRECT_URL
DATABASE_URL="postgresql://user:password@localhost:5432/betterlingo?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/betterlingo?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# App Configuration
NODE_ENV=development
